    <ul>
      <% if current_user.administrator? %>
        <li><%= link_to "Enquiries", enquiries_path %></li>
        <li><%= link_to "Pages", pages_path %></li>
        <li><%= link_to "Photo Pairs", photo_pairs_path %></li>
        <li><%= link_to "Users", users_path %></li>
      <% end %>
    </ul>
  </nav>
<% end %>
