<%= form_for @page do |f| %>
  <%= render "shared/error_messages", target: @page %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :content, "Content" %><br />
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.check_box :published %> <%= f.label :published, "Publish?" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
