<% title "Pages" %>

<% if policy(Page).new? %>
  <p><%= link_to 'New Page', new_page_path %></p>
<% end %>

<% if @pages.present? %>
  <ul>
    <% @pages.each do |page| %>
      <li>
        <%= link_to page.name, page %><% unless page.published %> - <span class="unpublished">Unpublished</span><% end %>
      </li>
    <% end %>
  </ul>
  <%= paginate @pages %>
<% end %>
