<%= form_for @photo, html: { multipart: true } do |f| %>
  <%= render "shared/error_messages", target: @photo %>
  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description %>
  </div>
  <div>
  	<%= f.label :photo, "Photo" %><br />
    <%= image_tag(@photo.photo_url(:thumbnail)) if @photo.photo? %>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div>
    <%= f.check_box :published %> <%= f.label :published, "Publish?" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
